            "struct $1;"
        ],
        "description": "creates a new bevy marker component"
    },
    "Bevy Plugin": {
        "prefix": "bevplug",
        "body": [
            "pub struct $1;",
            "",
            "impl Plugin for $1 {",
            "    fn build(&self, app: &mut App) {",
            "        $2",
            "    }",
            "}"
        ],
        "description": "creates a new bevy plugin"
    },
    "Bevy Resource": {
        "prefix": "bevres",
        "body": [
